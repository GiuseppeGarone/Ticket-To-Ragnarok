<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.giuseppegarone.tickettoragnarok">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameMenuActivity" />
        <activity android:name=".GameTutorialActivity" android:hardwareAccelerated="false"/>
        <activity android:name=".GamePlayingActivity" />
        <activity android:name=".TopPlayersActivity" />
        <activity
            android:name=".Popup"
            android:theme="@style/AppTheme.PopupTheme" />
        <activity android:name=".WinActivity" />
        <activity android:name=".LoseActivity" />
    </application>

</manifest>